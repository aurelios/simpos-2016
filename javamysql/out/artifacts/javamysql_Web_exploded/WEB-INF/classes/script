use simpos

CREATE TABLE `city` (
  `ID_CITY` mediumint(8) unsigned NOT NULL auto_increment,
  `NAME`  varchar(255) unique,
  PRIMARY KEY (`ID_CITY`)
) AUTO_INCREMENT=1;

